# Local Development Environment Configuration
NODE_ENV=development

# Database Configuration - Local PostgreSQL
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=your_db_password_here
PGDATABASE=tradebuddy
PGPORT=5432

# Alternative DATABASE_URL format (used by the app)
DATABASE_URL=postgresql://postgres:your_db_password_here@localhost:5432/tradebuddy

# Server Configuration
PORT=3000

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-for-local-development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# N8N Webhook Configuration (optional for local development)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/telegram

# Telegram Bot Configuration (optional)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Optional: N8N Authentication (if your webhook requires it)
# N8N_API_KEY=your_n8n_api_key 