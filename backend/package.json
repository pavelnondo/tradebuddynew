{
  "name": "trade-buddy-backend",
  "version": "1.0.0",
  "description": "Trade Buddy Backend with Telegram Integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "telegram": "node telegram-webhook.js",
    "telegram-dev": "nodemon telegram-webhook.js",
    "setup-db": "psql -h ${PGHOST:-localhost} -U ${PGUSER:-tradebuddy_user} -p ${PGPORT:-5440} -d ${PGDATABASE:-tradebuddy} -f database-schema.sql",
    "dev:all": "concurrently \"node index.js\" \"node telegram-webhook.js\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "trading",
    "telegram",
    "bot",
    "ai",
    "n8n"
  ],
  "author": "Trade Buddy",
  "license": "MIT"
}
